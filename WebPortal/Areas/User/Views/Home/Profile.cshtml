@using WebPortal.Models.ViewModels
@model ProfileVM


<div class="row">
    <div class="col-md-6">
        <h2 class="mb-3">Change Password</h2>
        <form id="change-password-form" method="post" asp-area="User" asp-controller="Home" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Password.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="@Model.Password.OldPassword" class="form-label"></label>
                <span asp-validation-for="@Model.Password.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Password.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Password.NewPassword" class="form-label"></label>
                <span asp-validation-for="@Model.Password.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Password.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Password.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="@Model.Password.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
